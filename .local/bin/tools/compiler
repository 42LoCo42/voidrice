#!/usr/bin/env sh

# This script will compile or run another finishing operation on a document. I
# have this script run via vim.
#
# Compiles .tex. groff (.mom, .ms), .rmd, .md.  Opens .sent files as sent
# presentations.  Runs scripts based on extention or shebang

file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"

cd "$dir" || exit

asciimov() {
	lastnum="$(ls | sed 's/.asciimov//' | sort -g | tail -1)"
	newnum=$((lastnum+1))
	cp "$lastnum.asciimov" "$newnum.asciimov"
	xdotool type ":edit $newnum.asciimov"
	xdotool key KP_Enter
}

case "$file" in
	*\.ms)    gcm "$file" | groff -ms     -mden -keptR  > "$base".ps ;;
	*\.mom)   gcm "$file" | groff -mom    -mden -keptR  > "$base".ps ;;
	*\.[0-9]) gcm "$file" | groff -mandoc -mden -R      > "$base".ps ;;

	*\.md) pandoc "$file" --from gfm --pdf-engine=xelatex --variable mainfont="DejaVu Sans" -o "$base".pdf ;;

	*config.h) sudo make install ;;
    *\.c) cc "$file" -o "$base" && "$base" ;;
	*\.py) python "$file" ;;
	*\.go) go run "$file" ;;

	*\.sent) setsid sent "$file" 2>/dev/null & ;;

	*\.asciimov) asciimov ;;
	*\.xjmas)
		runhaskell Main.hs "$file" "$base".xjx.tmp
		cat DEFAULT.xjx "$base".xjx.tmp > "$base".xjx
		rm "$base".xjx.tmp ;;
	*\.asm) ./boot.sh "${file%.*}" ;;

	*) sed 1q "$file" | grep "^#!/" | sed "s/^#!//" | xargs -r -I % "$file" ;;
esac
